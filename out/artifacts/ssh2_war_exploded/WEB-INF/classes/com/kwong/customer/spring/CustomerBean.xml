<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="customerAction" class="com.kwong.customer.action.CustomerAction">
        <property name="customerBo" ref="customerBo"/>
    </bean>
    <bean id="customerBo" class="com.kwong.customer.bo.impl.CustomerBoImpl">
        <property name="customerDAO" ref="customerDAO"/>
    </bean>
    <bean id="customerDAO" class="com.kwong.customer.dao.impl.CustomerDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
</beans>